{% extends 'base.twig' %}

{% block conteudo %}
	<div class="home">
	    <div id="banner-wrapper">
	        <div id="banners" class="owl-carousel owl-theme">
	            {% for item in post.get_field('banners') %}
	            <div class="box-item">
	                {% if item.link %}
	                <a href="{{ banner.link }}">
	                {% endif %}
	                <img src="{{ Image(item.imagem) }}" class="img-fluid">
	                {% if item.link %}
	                </a>
	                {% endif %}
	            </div>
	            {% endfor %}
	        </div>
	    </div>

	    <!-- About -->
	    <section class="about-wrapper">
	        <div class="container">
	            <div class="box">
	                <div class="border-top-rotate d-none d-sm-block"></div>
	                <div class="about-content">
	                    <div class="row">
	                        <div class="col-md-5">
	                            <div class="logo-3d">
	                                <img src="{{ Image(post.imagem_sobre) }}" class="img-fluid" alt="empresa1 Seeds">
	                            </div>
	                        </div>
	                        <div class="col-md-7">
	                            <p>{{ post.texto_sobre }}</p>

	                            {% if fn('get_locale') == 'en_US' %}
	                            	<a href="{{ site.url }}/quem-somos" class="btn btn-custom">Who we are</a>
	                            {% else %}
	                            	<a href="{{ site.url }}/quem-somos" class="btn btn-custom">Quem somos</a>
	                            {% endif %}
	                        </div>
	                    </div>
	                </div>
	            </div>
	        </div>
	    </section>

	    <!-- Images -->
	    <section class="images-wrapper">
	        <div class="container">
	            <div class="box">
	                <div class="row">
	                	{% for item in post.get_field('imagens_home') %}
		                    <div class="col">
		                        <figure>
		                            <img src="{{ Image(item.imagem) }}" class="img-fluid">
		                        </figure>
		                    </div>
	                	{% endfor %}
	                </div>
	            </div>
	        </div>
	    </section>

	    <!-- Products -->
	    <section class="products-wrapper" style="background-image: url({{ Image(post.imagem_prod) }})">
	        <div class="container">
	            <div class="row">
	                <div class="col-md-12">
	                    <div class="box-title">
	                    	{% if fn('get_locale') == 'en_US' %}
	                    		<h2><span>Products</span></h2>
	                    	{% else %}
	                    		<h2><span>Produtos</span></h2>
	                    	{% endif %}
	                    </div>
	                </div>
	            </div>

	            <div class="row">
	                <div class="col-md-12">
	                    <div class="products-list owl-carousel owl-theme">
	                        {% for product in produtos %}
	                        <div class="item">
	                            <div class="item-content">
	                                <span class="type">{{ product.rotulo_produto }}</span>
	                                <img src="{{ Image(product.imagem_nome_produto) }}" class="img-logo primary" alt="{{ product.title }}">
	                                <img src="{{ Image(product.imagem_nome_ativo_produto) }}" class="img-logo active" alt="{{ product.title }}">
	                                <a href="{{ product.link }}"><img src="{{ Image(product.imagem_home_produto) }}" class="img-fluid" alt="{{ product.title }}"></a>
	                                <a href="{{ product.link }}" class="btn btn-more">
	                                    {% if fn('get_locale') == 'en_US' %}
	                                    	<span class="text">Know more</span>
	                                    {% else %}
	                                    	<span class="text">Saiba mais</span>
	                                    {% endif %}
	                                    
	                                    <span class="icon">
	                                        <i class="fas fa-play"></i>
	                                    </span>
	                                </a>
	                            </div>
	                            <div class="item-box">
	                            </div>
	                        </div>
	                        {% endfor %}
	                    </div>
	                </div>
	            </div>
	        </div>
	    </section>

	    <!-- Technology -->
	    <section class="technology-wrapper">
	        <div class="row no-gutters">
	            <div class="col-md-7">
	                {% if fn('get_locale') == 'en_US' %}
	                	<h2><span data-aos="fade-up" data-aos-duration="2500" data-aos-offset="500">Technologies</span></h2>
	                {% else %}
	                	<h2><span data-aos="fade-up" data-aos-duration="2500" data-aos-offset="500">Tecnologias</span></h2>
	                {% endif %}
	                
	                <div class="box">
	                    <p><span>{{ post.texto_tec }}</span></p>

	                    {% if fn('get_locale') == 'en_US' %}
	                    	<a href="{{ site.url }}/tecnologias" class="btn btn-custom">Know more</a>
	                    {% else %}
	                    	<a href="{{ site.url }}/tecnologias" class="btn btn-custom">Saiba mais</a>
	                    {% endif %}
	                </div>
	            </div>
	            <div class="col-md-5">
	                <figure>
	                    <img src="{{ Image(post.imagem_tec) }}" class="img-fluid">
	                </figure>
	            </div>
	        </div>
	    </section>

	    <!-- Downloads -->
	    {##<section class="downloads-wrapper">
	        <div class="container">
	            <div class="row">
	                <div class="col-md-12">
	                    <div class="box">
	                        <div class="box-border-top d-none d-sm-block"></div>
	                        <div class="box-border-right d-none d-sm-block"></div>
	                        <div class="box-border-bottom d-none d-sm-block"></div>
	                        <div class="box-border-left d-none d-sm-block"></div>
	                        <div class="box-border-bottom-form d-none d-sm-block"></div>

	                        <h2><span>Downloads</span></h2>

	                        <div class="box-content">
	                            <h4>Baixe aqui o nosso material técnico.</h4>
	                            <figure class="d-none d-sm-block">
	                                <a href="downloads"><img src="assets/images/downloads-home.png" class="img-fluid" alt=""></a>
	                            </figure>
	                            <figure class="d-block d-sm-none">
	                            <a href="downloads"><img src="assets/images/downloads-home-xs.png" class="img-fluid" alt=""></a>
	                            </figure>
	                            
	                            <span><a href="downloads">Impressos</a></span>
	                        </div>
	                    </div>
	                </div>
	            </div>
	        </div>
	    </section>##}

	    <!-- News -->
	    {# {% if posts.num_rows() > 2 %}
