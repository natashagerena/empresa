	                    </div>
	                </div>
	            </div>
	        </div>
	    </section>
	    {% endif %} #}

	    <!-- Events -->
	    <section class="events-wrapper">
	        <div class="content">
	            <div class="row no-gutters">
	                <div class="col-md-5">
	                	{% if fn('get_locale') == 'en_US' %}
	                		<h2>Events</h2>
	                	{% else %}
	                		<h2>Eventos</h2>
	                	{% endif %}

	                    <div class="box">
	                        <div class="box-border-top d-none d-sm-block"></div>
	                        <div class="box-border-right d-none d-sm-block"></div>
	                        <div class="box-border-bottom d-none d-sm-block"></div>
	                        <div class="box-border-left d-none d-sm-block"></div>

	                        {# <figure class="d-block d-sm-none">
	                            <img src="assets/images/events-home-xs.jpg" class="img-fluid" alt="Eventos">
	                        </figure> #}

	                        <h4>{{ post.texto_eventos }}</h4>
	                        <img src="{{ theme.link }}/assets/images/icon-events.png" class="img-fluid icon-event">
	                        
	                        {% if fn('get_locale') == 'en_US' %}
	                        	<a href="{{ site.url }}/eventos" class="btn btn-orange">Click here</a>
	                        {% else %}
	                        	<a href="{{ site.url }}/eventos" class="btn btn-orange">Clique aqui</a>
	                        {% endif %}
	                    </div>
	                </div>
	                <div class="col-md-7">
	                    <figure class="d-none d-sm-block">
	                        <img src="{{ Image(post.imagem_eventos) }}" class="img-fluid" alt="Eventos">
	                    </figure>
	                </div>
	            </div>
	        </div>
	    </section>

	    <!-- Contact -->
	    {% if fn('get_locale') == 'en_US' %}
	    	<section id="contato" class="contact-wrapper">
	    	    <div class="container">
	    	        <div class="row">
	    	            <div class="col-md-12">
	    	                <div class="box-title">
	    	                    <h2>Contact</h2>
	    	                    <h4>Fill in the fields below and wait for one of our representatives to contact you.</h4>
	    	                </div>
	    	            </div>
	    	        </div>

	    	        <div class="row">
	    	            <div class="col-md-12">
	    	                <form id="form_contato" method="POST" action="{{ site.url }}/#form_contato">

	    	                    <div class="form-row">
	    	                        <div class="form-group col-md-12">
	    	                            <label class="sr-only" for="name">Name</label>
	    	                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Full name:" required>
	    	                        </div>
	    	                    </div>

	    	                    <div class="form-row">
	    	                        <div class="form-group col-md-6">
	    	                            <label class="sr-only" for="email">E-mail</label>
	    	                            <input type="email" class="form-control" id="email" name="email" placeholder="E-mail:" required>
	    	                        </div>

	    	                        <div class="form-group col-md-6">
	    	                            <label class="sr-only" for="phone">Phone</label>
	    	                            <input type="tel" class="form-control mask_phone" id="telefone" name="telefone" placeholder="Phone:" required>
	    	                        </div>
	    	                    </div>

	    	                    <div class="form-row">
	    	                        <div class="form-group col-md-7">
	    	                            <label class="sr-only" for="city">City</label>
	    	                            <input type="text" class="form-control" id="cidade" name="cidade" placeholder="City:" required>
	    	                        </div>

	    	                        <div class="form-group col-md-5">
	    	                            <label class="sr-only" for="state">State</label>
	    	                            <input type="text" class="form-control" id="estado" name="estado" placeholder="State:" required>
	    	                        </div>
	    	                    </div>

	    	                    <div class="form-row">
	    	                        <div class="form-group col-md-12">
	    	                            <label class="sr-only" for="message">Message</label>
	    	                            <textarea class="form-control" id="mensagem" name="mensagem" placeholder="Message:*" rows="4" required></textarea>
	    	                        </div>
	    	                    </div>

	    	                    <div class="form-row">
	    	                        <div class="checkbox">
	    	                            <label>
	    	                                <input type="checkbox" name="notification" id="notification" value="Sim">
	    	                                <span class="box"></span>
	    	                                I accept to receive communications from empresa1 Seeds
	    	                                <p>I would like to receive communications of products and/or promotions by E-mail, SMS, telephone or postal mail.</p>
	    	                            </label>
	    	                        </div>
	    	                    </div>

	    	                    <div class="response"></div>

	    	                    <div class="form-row">
	    	                        <div class="col-md-12 text-center mt-3 mb-3">
	    	                            <button type="submit" class="btn btn-custom">Send</button>
	    	                        </div>								
	    	                    </div>

	    	                    <input type="hidden" name="form_action" value="form_contato">
	    	                </form>
	    	            </div>
	    	        </div>
	    	    </div>
	    	</section>
	    {% else %}
	    	<section id="contato" class="contact-wrapper">
	    	    <div class="container">
	    	        <div class="row">
	    	            <div class="col-md-12">
	    	                <div class="box-title">
	    	                    <h2>Contato</h2>
	    	                    <h4>Preencha os campos abaixo e aguarde o contato de um de nossos representantes.</h4>
	    	                </div>
	    	            </div>
	    	        </div>

	    	        <div class="row">
	    	            <div class="col-md-12">
	    	                <form id="form_contato" method="POST" action="{{ site.url }}/#form_contato">

	    	                    <div class="form-row">
	    	                        <div class="form-group col-md-12">
	    	                            <label class="sr-only" for="name">Nome</label>
	    	                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome completo:" required>
	    	                        </div>
	    	                    </div>

	    	                    <div class="form-row">
	    	                        <div class="form-group col-md-6">
	    	                            <label class="sr-only" for="email">E-mail</label>
	    	                            <input type="email" class="form-control" id="email" name="email" placeholder="E-mail:" required>
	    	                        </div>

	    	                        <div class="form-group col-md-6">
	    	                            <label class="sr-only" for="phone">Telefone</label>
	    	                            <input type="tel" class="form-control mask_phone" id="telefone" name="telefone" placeholder="Telefone:" required>
	    	                        </div>
	    	                    </div>

	    	                    <div class="form-row">
	    	                        <div class="form-group col-md-7">
	    	                            <label class="sr-only" for="city">Cidade</label>
	    	                            <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Cidade:" required>
	    	                        </div>

	    	                        <div class="form-group col-md-5">
	    	                            <label class="sr-only" for="state">Estado</label>
	    	                            <input type="text" class="form-control" id="estado" name="estado" placeholder="Estado:" required>
	    	                        </div>
	    	                    </div>

	    	                    <div class="form-row">
	    	                        <div class="form-group col-md-12">
	    	                            <label class="sr-only" for="message">Mensagem</label>
	    	                            <textarea class="form-control" id="mensagem" name="mensagem" placeholder="Mensagem:*" rows="4" required></textarea>
	    	                        </div>
	    	                    </div>

	    	                    <div class="form-row">
	    	                        <div class="checkbox">
	    	                            <label>
	    	                                <input type="checkbox" name="notification" id="notification" value="Sim">
	    	                                <span class="box"></span>
	    	                                Aceito receber comunicações da empresa1 Seeds
	    	                                <p>Gostaria de receber comunicações de produtos e/ou promoções por E-mail, SMS, telefone ou correio postal.</p>
	    	                            </label>
	    	                        </div>
	    	                    </div>

	    	                    <div class="response"></div>

	    	                    <div class="form-row">
	    	                        <div class="col-md-12 text-center mt-3 mb-3">
	    	                            <button type="submit" class="btn btn-custom">Enviar</button>
	    	                        </div>								
	    	                    </div>

	    	                    <input type="hidden" name="form_action" value="form_contato">
	    	                </form>
	    	            </div>
	    	        </div>
	    	    </div>
	    	</section>
	    {% endif %}
	</div>
{% endblock %}