{% extends 'base.twig' %}

{% block conteudo %}
<div class="products _archive">
    <div class="topo">
        <div class="container">
            <h2 class="titulo">{% if fn('get_locale') == 'en_US' %}Products{% else %}Produtos{% endif %}</h2>
            <p class="texto">{{ option('texto_produtos') }}</p>
        </div>
    </div>

    <div class="itens">
        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                {% for post in posts %}
                    <div class="col-md-4 prod-{{ post.slug }}">
                        <a href="{{ post.link }}">
                            <div class="box3d">
                                <div class="imagem"><img src="{{ Image(post.imagem_nome_produto) }}" class="img-fluid" alt="{{ post.title }}"></div>
                                <div class="texto">
                                    {{ post.subtitulo_produto }}
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% endblock %}